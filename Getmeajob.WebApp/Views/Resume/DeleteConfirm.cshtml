@using Getmeajob.Model
@model ResumeM

@{
    ViewData["Title"] = "Confirm Resume Page";
}

<!-- HOME -->
<section class="section-hero overlay inner-page bg-image pt-5" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row pt-3 pb-0">
            <div class="col-md-9">
            </div>
            <div class="col-md-3">
                <div class="custom-breadcrumbs">
                    <a href="#">Home</a> <span class="mx-2 slash">»</span>
                    <span class="text-white"><strong>Delete your Resume</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>



@if(ViewBag.Error == true)
{
    
    <section class="site-section pt-0">
        <div class="container">


            <div class="row align-items-center mb-5">
                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h2 class="font-weight-bold">Delete your Resume: Resume Not Confirmed Yet</h2>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="align-items-center">
                        <div>
                            <h4 class="font-weight-bold" >Error</h4>
                        </div>
                         <div>
                            <p class="font-weight-bold" >Something went wrong!</p>
                        </div>
                    </div>
                </div>

            </div>

        </div>


    </section>
}
else
{

    <section class="site-section pt-0">
        <div class="container">


            <div class="row align-items-center mb-5">
                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h2 class="font-weight-bold">Delete your Job: Confrimation</h2>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h4>Your posting has been deleted. Thanks for using getmeaResume.com</h4>
                        </div>
                    </div>
                </div>

            </div>



        </div>


    </section>
}