@using Getmeajob.Model
@model ResumeM

@{
    ViewData["Title"] = "Confirm Resume Page";
}

<!-- HOME -->
<section class="section-hero overlay inner-page bg-image pt-5" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row pt-3 pb-0">
             <div class="col-md-9">
            </div>
            <div class="col-md-3">
                <div class="custom-breadcrumbs">
                    <a href="#">Home</a> <span class="mx-2 slash">/</span>
                    <a href="#">Submit a Resume</a> <span class="mx-2 slash">/</span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section pt-0">
    <div class="container">

        <form asp-action="Create" method="post">

            <input type="hidden" asp-for="@Model.UserId" />
            <input type="hidden" asp-for="@Model.JobSeekerId" />
            <input type="hidden" asp-for="@Model.user.UserId" />
            <input type="hidden" asp-for="@Model.user.FullName" />
            <input type="hidden" asp-for="@Model.user.Email" />
            <input type="hidden" asp-for="@Model.user.Password" />
            <input type="hidden" asp-for="@Model.jobseeker.StreetAddress" />
            <input type="hidden" asp-for="@Model.jobseeker.City" />
            <input type="hidden" asp-for="@Model.jobseeker.State" />
            <input type="hidden" asp-for="@Model.jobseeker.Zip" />
            <input type="hidden" asp-for="@Model.jobseeker.Country" />
            <input type="hidden" asp-for="@Model.jobseeker.Telephone" />
            <input type="hidden" asp-for="@Model.jobseeker.Fax" />


            <div class="row align-items-center mb-5">
                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h2 class="font-weight-bold" >Submit A Resume: Resume Not Confirmed Yet</h2>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h4>Please check your email to continue</h4>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row mb-5">
                <div class="col-lg-12">
                    <div class="p-2 p-md-5">
                        <p class="text-black mb-3 border-bottom pb-2 font-weight-bold">
                            The submission process is not yet complete!
                        </p>
                        <p class="text-black mb-3 pb-2 ">
                            An email has now been sent to the email address you entered. You will need to follow the instructions in that email to ensure your submission will be considered for review. We take this extra step to ensure the quality of postings available on our site, getmeajob.com. Your posting will appear once it has been reviewed and approved.
                        </p>

                        <p class="text-black mb-3 border-bottom pb-2 font-weight-bold">
                            Important!
                        </p>
                        <p class="text-black mb-5 pb-2 ">
                            If you do not receive the email message, be sure to add getmeajob.com to your list of Safe Senders. For example, if you are using Hotmail, choose Options, Safe and blocked Senders, Safe senders, and add getmeajob.com to the list before retrying.
                        </p>




                    </div>
                </div>

            </div>

            <div class="row align-items-center mb-2">

                <div class="col-lg-4 ml-auto">
                    <div class="row ">
                        <div class="col-3">
                        </div>
                        <div class="col-9 ">
                            <button type="submit" class="btn btn-block btn-primary btn-md">Submit another job</button>
                            <p>
                                (no need to login again)
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-lg-12">
                    <div class="p-2 p-md-5">
                        <h4 class="text-black mb-3 border-bottom pb-2 font-weight-bold">
                            Your next step
                        </h4>
                        <p class="text-black mb-3 border-bottom pb-2">
                            Special offers for submitting your resume!
                        </p>
                        <p class="text-black mb-1">
                            Online Consumer Survey Take Our Online Survey Today! Qualify For Coupons & Free Samples. <a href="http://www.anrdoezrs.net/click-1652967-12808710">www.shoppersvoice.ca</a>
                        </p>
                        <p class="text-black mb-3 pb-2 ">
                            <a href="http://www.kqzyfj.com/click-1652967-12158452">Unlimited Access to 200+ Online Courses for $10</a>
                        </p>
                    </div>
                </div>

            </div>
            <div class="row align-items-center mb-2">

                <div class="col-lg-4 ml-auto">
                    <div class="row ">
                        <div class="col-3">
                        </div>
                        <div class="col-9 ">
                            <button type="submit" class="btn btn-block btn-primary btn-md">Submit another job</button>
                            <p>
                                (no need to login again)
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </form>

    </div>


</section>