@using Getmeajob.Model
@model IEnumerable<ResumeM>

@{
    ViewData["Title"] = "Resume List Page";
}

<!-- HOME -->
<section class="section-hero overlay inner-page bg-image pt-5" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row pt-3 pb-0">
            <div class="col-md-9">
            </div>
            <div class="col-md-3">
                <div class="custom-breadcrumbs">
                    <a href="#">Home</a> <span class="mx-2 slash">»</span>
                    <a href="#">Posted Resume </a> <span class="mx-2 slash">»</span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section pt-0">
    <div class="container">

        <form asp-action="SearchResult" method="post">

            <div class="row align-items-center mb-5">
                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h2 class="font-weight-bold">Matching Results</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-lg-12">
                    <div class="p-2 p-md-5">
                        <p class="text-black mb-3 border-bottom pb-2 font-weight-bold">
                            We found these Resumes matching your search criteria.
                        </p>
                        @{
                            int no = 1;
                        }
                        @if (Model != null)
                        {

                            @foreach (var res in Model)
                            {

                                <div class="form-group">
                                    <p>
                                        @no.
                                        @if(ViewBag.page == "modifyresume"){
                                             <a asp-action="Edit" asp-route-rid="@res.ResumeId"><span class="font-weight-bold"><u>@res.user?.FullName </u></span></a> <span class="font-italic"> -  @res.jobseeker?.StreetAddress, @res.jobseeker?.City, @res.jobseeker?.State, @res.jobseeker?.Zip ,  @res.jobseeker?.Country </span> <span> - @res.JobTitle- </span> <a asp-action="Details" asp-route-id="@res.ResumeId" target="_blank"><u>Show Resume</u></a> <span> | </span> <a asp-action="Edit" asp-route-rid="@res.ResumeId" target="_blank"><u>Modify Resume</u></a>
                                        }
                                        @if(ViewBag.page == "deleteresume"){
                                            <a asp-action="Delete" asp-route-rid="@res.ResumeId"><span class="font-weight-bold"><u>@res.user?.FullName </u></span></a>  <span class="font-italic"> - @res.jobseeker?.StreetAddress, @res.jobseeker?.City, @res.jobseeker?.State, @res.jobseeker?.Zip ,  @res.jobseeker?.Country </span> <span> - @res.JobTitle - </span> <a asp-action="Details" asp-route-id="@res.ResumeId" target="_blank"><u>Show Resume</u></a> <span> | </span>  <a asp-action="Delete" asp-route-rid="@res.ResumeId" target="_blank"><u>Delete Resume</u></a>
                                        }
                                    </p>
                                </div>
                                no++;

                            }
                        }


                    </div>
                </div>

            </div>

        </form>

    </div>


</section>