@using Getmeajob.ViewModel
@model ContactVM
@{
    ViewData["Title"] = "Contact Page";
}
@section link{
    <link rel="stylesheet" href="~/fe/css/quill.snow.css">
}

    <!-- HOME -->
    <section class="section-hero overlay inner-page bg-image pt-5" style="background-image: url('images/hero_1.jpg');" id="home-section">
        <div class="container">
            <div class="row pt-3 pb-0">
                <div class="col-md-9">
                </div>
                <div class="col-md-3">
                    <div class="custom-breadcrumbs">
                        <a href="#">Home</a> <span class="mx-2 slash">»</span>
                        <a href="#">Contact</a> <span class="mx-2 slash">»</span>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section class="site-section pt-0 mb-4">
        <div class="container">


            <div class="row align-items-center mb-4">
                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="d-flex align-items-center border-bottom">
                        <div>
                            <h2 class="font-weight-bold font-italic">Contact @Model.stype</h2>
                        </div>
                    </div>
                </div>

            </div>



            <div class="row align-items-center mb-0">
                <div class="col-lg-12 mb-1 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h4 class="font-weight-bold font-italic">What would you like to tell the candidate?</h4>
                        </div>
                    </div>
                </div>

            </div>

            <form asp-action="SendMail" method="post">


                <div class="row mb-2">
                    <div class="col-lg-12">
                        <div class="p-2 p-md-5">

                            <div class="form-group">
                                <label>Your Name</label>
                                <input asp-for="Name" type="text" required class="form-control" placeholder="Enter Name">
                            </div>

                            <div class="form-group">
                                <label>Your Email</label>
                                <input asp-for="Email" type="text" required class="form-control" placeholder="Enter Email">
                            </div>

                            <div class="form-group">
                                <label>Comments:</label>
                                <textarea asp-for="Message" required rows="6" type="text" class="form-control" placeholder="Enter message">

                                                    </textarea>
                            </div>

                            <p class="text-black mb-3 pb-2 font-italic">
                                <b>NEW!</b> Please answer the security question <b>exactly</b> as shown:
                            </p>

                            <div class="form-group">
                                <label>What is @Model.No1 + @Model.No2 </label>
                                <input asp-for="Answer" type="number" class="form-control" placeholder="Enter answer">
                            </div>

                        </div>
                    </div>

                </div>

                <div class="row align-items-center mb-1">

                    <div class="col-lg-4 ml-auto">
                        <div class="row ">
                            <div class="col-6">
                            </div>
                            <div class="col-6 ">
                                <input asp-for="result" type="hidden" />
                                <input asp-for="id" type="hidden" />
                                <input asp-for="stype" type="hidden" />
                                <button type="submit" class="btn btn-block btn-primary btn-md">Continue</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

            <div class="row align-items-center mb-0">
                <div class="col-lg-12 mb-1 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <p class="font-weight-bold">
                                No permission is granted to use this form for any purpose other than to contact a company with an inquiry relevant to the posting. <br />

                                All messages sent using this form may be logged by getmeajob.com, and a minimum fee of $10000 applies each time an irrelevant message is sent using this form. Improper use of this form may also be reported to your ISP and/or law enforcement agencies. You agree to indemnify getmeajob.com for the improper use of this form and agree to be responsible for 6 (six) times the legal fees, including but not limited to court costs and fines.
                            </p>
                        </div>
                    </div>
                </div>

            </div>


        </div>

    </section>

    @section Scripts{
    <script type="text/javascript">
        $("#question_ask").click(function() {

        }


    </script>
     }

    @section script
    {
    <script src="~/fe/js/quill.min.js"></script>
}