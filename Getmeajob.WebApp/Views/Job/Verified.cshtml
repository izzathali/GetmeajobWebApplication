@using Getmeajob.Model
@{
    ViewData["Title"] = "Verify Job Page";
}

<!-- HOME -->
<section class="section-hero overlay inner-page bg-image pt-5" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row pt-3 pb-0">
            <div class="col-md-9">
            </div>
            <div class="col-md-3">
                <div class="custom-breadcrumbs">
                    <a href="#">Home</a> <span class="mx-2 slash">»</span>
                    <span class="text-white"><strong>Verify your Job</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section pt-0">
    <div class="container">

        @if (ViewBag.success == true)
        {


            <div class="row align-items-center mb-5">
                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="align-items-center">
                        <div>
                            <h2 class="font-weight-bold">Confirm Submission</h2>
                        </div>
                        <p class="text-black mb-3 pb-2 font-weight-bold">
                            Thank you. Your submission has been confirmed. This process will take at most about a week. Please do not contact us regarding when your submission will appear.
                        </p>
                    </div>
                </div>



            </div>

            <div class="row mb-5">
                <div class="col-lg-12">
                    <div class="p-2 p-md-5">
                        <div>
                            <h4 class="font-weight-bold">Give your listing more exposure</h4>
                        </div>
                        <p class="text-black mb-3 pb-2 ">
                            This submission may qualify for the Front Page Listings feature.
                        </p>

                        <p class="text-black mb-3 pb-2 font-weight-bold">
                            Get more exposure for your listing on getmeajob.com with the new Front Page Listings feature. Click here to sign up today. Full details of Front Page Listings are available at <a href="http://www.getmeajob.com/advertise/">http://www.getmeajob.com/advertise/</a> .!
                        </p>
                    </div>
                </div>

            </div>
        }
        else
        {
            <div class="row align-items-center mb-5">
                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="align-items-center">
                        <div>
                            <h2 class="font-weight-bold">Error</h2>
                        </div>
                        <p class="text-black mb-3 pb-2 font-weight-bold">
                            Something went wrong!
                        </p>
                    </div>
                </div>

            </div>

        }


    </div>


</section>
