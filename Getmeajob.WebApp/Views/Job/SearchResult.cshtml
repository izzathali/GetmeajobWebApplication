@using Getmeajob.Model
@model IEnumerable<JobM>

@{
    ViewData["Title"] = "Search List Page";
}

<!-- HOME -->
<section class="section-hero overlay inner-page bg-image pt-5" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row pt-3 pb-0">
            <div class="col-md-9">
            </div>
            <div class="col-md-3">
                <div class="custom-breadcrumbs">
                    <a href="#">Home</a> <span class="mx-2 slash">»</span>
                    <a href="#">Free Job </a> <span class="mx-2 slash">»</span>
                    <span class="text-white"><strong>Results</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section pt-0">
    <div class="container">

        <form asp-action="SearchResult" method="post">

            <div class="row align-items-center mb-5">
                <div class="col-lg-12 mb-2 mb-lg-0">
                    <div class="d-flex align-items-center">
                        <div>
                            <h2 class="font-weight-bold">Search Jobs Results</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-lg-12">
                    <div class="p-2 p-md-5">
                        <p class="text-black mb-3 border-bottom pb-2 font-weight-bold">
                            We found these jobs matching your search criteria.
                        </p>
                        @{
                            int no = 1;
                        }
                        @foreach (var job in Model)
                        {
                            if (no <= 20)
                            {
                                <div class="form-group">
                                    <p>
                                        @no. <a asp-action="Details" asp-route-id="@job.JobId" asp-route-search="@ViewBag.search" asp-route-location="@ViewBag.location"  >
                                            <span class="font-weight-bold">
                                                <u>@job.company?.CompanyName </u>
                                            </span>
                                        </a> -
                                        <span class="font-italic"> @job.company?.StreetAddress, @job.company?.City, @job.company?.State, @job.company?.Zip ,  @job.company?.Country </span> - <span> @job.JobTitle - </span>
                                        <a asp-action="Details" asp-route-id="@job.JobId" asp-route-search="@ViewBag.search" asp-route-location="@ViewBag.location" target="_blank"><u>Show Job</u></a>
                                    </p>
                                </div>
                            }
                            no++;

                            if (no >= 20)
                            {
                                <hr />
                                <p class="text-black font-weight-bold mt-3 mb-3 pb-2 ">
                                    We found more than 20 jobs. Please try again with more specific criteria.
                                </p>
                            }
                        }


                    </div>
                </div>

            </div>

        </form>

    </div>


</section>